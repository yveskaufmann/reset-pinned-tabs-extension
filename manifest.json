{
  "manifest_version": 3,
  "name": "Pinned Tab Resetter",
  "description": "Small open-source WebExtension for Firefox that restores pinned tabs to their initial URLs on startup.",
  "version": "1.0.0",
  "permissions": ["tabs", "menus", "contextMenus", "sessions", "storage"],
  "background": {
    "scripts": ["src/background.js"],
    "service_worker": "src/background.js",
    "type": "module"
  },
  "author": "Yves Kaufmann",
  "homepage_url": "https://github.com/yveskaufmann/reset-pinned-tabs-extension",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Pinned Tab Resetter",
    "default_popup": "src/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "pinned-resetter@yveskaufmann.github.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
